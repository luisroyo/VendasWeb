@model VendasWebMVC.Models.Vendedor
@{
    ViewData["Title"] = "Criar";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />

    <div class ="col-md-4">
        <form asp-action="Criar">

            <div class="form-group">
                <label asp-for="Name" class ="control-label"></label>
                <input asp-for="Name" class="form-control"/>
            </div>
           
            <div class="form-group">
                <label asp-for="Email" class ="control-label"></label>
                <input asp-for="Email" class="form-control"/>
            </div>
             <div class="form-group">
                <label asp-for="Nascimento" class ="control-label"></label>
                <input asp-for="Nascimento" class="form-control"/>
            </div>
             <div class="form-group">
                <label asp-for="SalarioBase" class ="control-label"></label>
                <input asp-for="SalarioBase" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</>

