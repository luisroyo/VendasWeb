@model IEnumerable<VendasWebMVC.Models.Vendedor>


@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<p>

    <a asp-action="Criar" class="btn btn-default">Criar Novo</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class ="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th><th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th><th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
       {
           <tr >
               <td>
                   @Html.DisplayFor(modelItem=> item.Name)
               </td>

               <td>
                   @Html.DisplayFor(modelItem=> item.Email)
               </td>
               <td>
                   @Html.DisplayFor(modelItem=> item.Nascimento)
               </td>
               <td>
                   @Html.DisplayFor(modelItem=> item.SalarioBase)
               </td>
               <td>
                   <a asp-action="Editar" asp-route-id= "@item.ID"> Editar</a>
                   <a asp-action="Detalhar" asp-route-id= "@item.ID"> Detalhar</a>
                   <a asp-action="Deletar" asp-route-id= "@item.ID"> Deletar</a>
               </td>
           </tr>
       }
    </tbody>

    </table>